{
  "name": "OmniFit - Coach Fitness IA Premium",
  "short_name": "OmniFit",
  "description": "Coach fitness IA personnel avec programmes adaptés, suivi intelligent et motivation personnalisée pour atteindre vos objectifs",
  "start_url": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay"],
  "protocol_handlers": [
    {
      "protocol": "web+omnifit",
      "url": "/?handler=%s"
    }
  ],
  "lang": "fr",
  "dir": "ltr",
  "theme_color": "#00D9B1",
  "background_color": "#1F2937",
  "orientation": "portrait",
  "id": "com.omnirealm.omnifit",
  "scope": "/",
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-1.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "description": "Écran principal avec compteurs d'exercices",
      "label": "Écran principal"
    },
    {
      "src": "/screenshot-2.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "description": "Page de statistiques avec graphiques détaillés",
      "label": "Statistiques"
    },
    {
      "src": "/screenshot-3.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "description": "Page de configuration des rappels",
      "label": "Réglages"
    }
  ],
  "categories": ["fitness", "health", "lifestyle", "sports"],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Ajouter Burpees",
      "short_name": "Burpees",
      "description": "Ajouter rapidement 10 burpees au compteur",
      "url": "/?exercise=burpees",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192", "type": "image/png" }]
    },
    {
      "name": "Voir Statistiques",
      "short_name": "Stats",
      "description": "Consulter vos statistiques d'entraînement",
      "url": "/?view=stats",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192", "type": "image/png" }]
    },
    {
      "name": "Réglages Rappels",
      "short_name": "Réglages",
      "description": "Configurer vos rappels d'exercices",
      "url": "/?view=settings",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192", "type": "image/png" }]
    }
  ],
  "features": ["notifications", "vibrate", "storage", "offline"],
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}
