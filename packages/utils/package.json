{
  "name": "@omnirealm/utils",
  "version": "1.0.0",
  "description": "Shared utility functions for OmniRealm ecosystem",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./dates": {
      "require": "./dist/dates/index.js",
      "import": "./dist/dates/index.mjs",
      "types": "./dist/dates/index.d.ts"
    },
    "./strings": {
      "require": "./dist/strings/index.js",
      "import": "./dist/strings/index.mjs",
      "types": "./dist/strings/index.d.ts"
    },
    "./react": {
      "require": "./dist/react/index.js",
      "import": "./dist/react/index.mjs",
      "types": "./dist/react/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.15",
    "tsup": "^8.0.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "omnirealm",
    "utils",
    "helpers",
    "utilities"
  ],
  "author": "OmniRealm Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/omnirealm-dev/omnirealm-system.git",
    "directory": "dev/packages/utils"
  }
}